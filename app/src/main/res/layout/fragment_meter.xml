<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".MeterFragment">

    <!-- Main Meter Display Panel -->
    <LinearLayout
        android:id="@+id/mainDigitalDisplayLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Total Fare Display - Main LCD Screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#000000"
            android:padding="16dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="┌─────────────────────┐"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:alpha="0.3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="│ "
                    android:textColor="#00FF00"
                    android:textSize="16sp"
                    android:fontFamily="monospace"
                    android:alpha="0.3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼ TOTAL FARE ▼"
                        android:textColor="#FF6B00"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.15"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:id="@+id/textViewTotalFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#00FF00"
                        android:textSize="72sp"
                        android:fontFamily="@font/ds_digib"
                        android:letterSpacing="0.08"
                        android:shadowColor="#00FF00"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"
                        tools:text="15.75" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIRHAM"
                        android:textColor="#FF6B00"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.2"
                        android:paddingTop="4dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" │"
                    android:textColor="#00FF00"
                    android:textSize="16sp"
                    android:fontFamily="monospace"
                    android:alpha="0.3"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="└─────────────────────┘"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:alpha="0.3"/>
        </LinearLayout>

        <!-- Secondary Display Panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">

            <!-- Distance Display -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#000000"
                android:padding="12dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="═══════════"
                    android:textColor="#00FFFF"
                    android:textSize="8sp"
                    android:fontFamily="monospace"
                    android:alpha="0.3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTANCE"
                    android:textColor="#FFD700"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/textViewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="#00FFFF"
                    android:textSize="36sp"
                    android:fontFamily="@font/ds_digib"
                    android:shadowColor="#00FFFF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    tools:text="3.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM"
                    android:textColor="#FFD700"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:paddingTop="2dp"/>
            </LinearLayout>

            <!-- Time Display -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#000000"
                android:padding="12dp"
                android:layout_marginStart="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="═══════════"
                    android:textColor="#FFA500"
                    android:textSize="8sp"
                    android:fontFamily="monospace"
                    android:alpha="0.3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMPS"
                    android:textColor="#FFD700"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#FFA500"
                    android:textSize="36sp"
                    android:fontFamily="@font/ds_digib"
                    android:shadowColor="#FFA500"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    tools:text="05:30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HR:MIN"
                    android:textColor="#FFD700"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:paddingTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Temperature Display -->
    <LinearLayout
        android:id="@+id/TempLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#1A1A1A"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainDigitalDisplayLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#000000"
            android:padding="8dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="◀ "
                android:textColor="#87CEEB"
                android:textSize="12sp"
                android:alpha="0.5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMP: "
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:id="@+id/textViewTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--°"
                    android:textColor="#87CEEB"
                    android:textSize="28sp"
                    android:fontFamily="@font/ds_digib"
                    android:shadowColor="#87CEEB"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="3"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:text="22°" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ▶"
                android:textColor="#87CEEB"
                android:textSize="12sp"
                android:alpha="0.5"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Control Buttons - Numeric Keypad Style -->
    <LinearLayout
        android:id="@+id/actionButtonWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#1A1A1A"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TempLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Start Button - Large like meter activation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:padding="4dp"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/btnDemarrer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="DÉMARRER"
                android:textColor="#00FF00"
                android:textSize="48sp"
                android:backgroundTint="#1A3A1A"
                android:fontFamily="@font/ds_digib"
                android:elevation="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DÉMARRER"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Stop and Restart Buttons - Numeric style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:padding="4dp"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="2dp">

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="STOP"
                    android:textColor="#FF0000"
                    android:textSize="42sp"
                    android:backgroundTint="#3A1A1A"
                    android:fontFamily="@font/ds_digib"
                    android:elevation="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STOP"
                    android:textColor="#FF0000"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="2dp">

                <Button
                    android:id="@+id/btnRestart"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="RESTART"
                    android:textColor="#00BFFF"
                    android:textSize="42sp"
                    android:backgroundTint="#1A2A3A"
                    android:fontFamily="@font/ds_digib"
                    android:elevation="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RESTART"
                    android:textColor="#00BFFF"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>